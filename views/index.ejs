<!DOCTYPE html>
	<html>
		<head>
			<meta name="viewport" content="width=device-width">
			<meta name="viewport" content="initial-scale=1.0">

			<title>Dashboard - BYT</title>
			<!--boostrap-->
			<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

			<!--angular -->
			<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>

			<!--my javascript -->
			<script src="/javascripts/angularApp.js"></script>
			<script src="/javascripts/controllers/AuthCtrl.js"></script>
			<script src="/javascripts/controllers/BillsCtrl.js"></script>
			<script src="/javascripts/controllers/DashboardCtrl.js"></script>
			<script src="/javascripts/controllers/IncomeCtrl.js"></script>
			<script src="/javascripts/controllers/MonthlyExpensesCtrl.js"></script>
			<script src="/javascripts/controllers/NavCtrl.js"></script>
			<script src="/javascripts/factories/authFactory.js"></script>
			<script src="/javascripts/factories/billsFactory.js"></script>
			<script src="/javascripts/factories/incomeFactory.js"></script>
			<script src="/javascripts/factories/monthlyExpensesFactory.js"></script>

			<!--my css -->
			<link rel="stylesheet" href="/css/styles.css">				
		</head>
		<body ng-app="Dashboard">
			<div class="container">
				<div class="row" ng-controller="NavCtrl">
					<nav class="navbar navbar-default">
						<ul class="nav navbar-nav">
							<li ng-show="isLoggedIn()"><a>{{ currentUser() }}</a></li>
							<li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
							<li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
							<li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
						</ul>
					</nav>				
				</div>				
				<div class="row col-md-10 col-md-offset-1 main_content">					
					<ui-view></ui-view>
				</div>
			</div>

			<!--Home-->
			<script type="text/ng-template" id="/home.html">
				<div class="page-header">
					<h3>Build Your Tomorrow (BYT) is an app that allows you to track your income and expenses. By doing so, you'll become more aware of your financial picture and spending habits. You can then use that knowledge to make necessary changes or adjustments.</h3>
				</div>
			</script>

			<!--Register-->
			<script type="text/ng-template" id="/register.html">
				<div class="page-header">
					<h1>Let's budget</h1>
				</div>
				<div ng-show="error" class="alert alert-danger row">
					<span>{{ error.message }}</span>
				</div>
				<form ng-submit="register()" style="margin-top:30px;">
					<h3>Register</h3>
					<div class="form-group">
						<input type="text" class="form-control" placeholder="Username" ng-model="user.username" required>
					</div>
					<div class="form-group">
						<input type="password" class="form-control" placeholder="Password" ng-model="user.password" required>
					</div>
					<button type="submit" class="btn btn-primary">Register</button>
				</form>
			</script>

			<!--Login-->
			<script type="text/ng-template" id="/login.html">
				<div class="page-header">
					<h1>Let's budget</h1>
				</div>
				<div ng-show="error" class="alert alert-danger row">
					<span>{{ error.message }}</span>
				</div>
				<form ng-submit="logIn()" style="margin-top:30px;">
					<h3>Log In</h3>
					<div class="form-group">
					  <input type="text" class="form-control" placeholder="Username" ng-model="user.username" required>
					</div>
					<div class="form-group">
					  <input type="password" class="form-control" placeholder="Password" ng-model="user.password" required>
					</div>
					<button type="submit" class="btn btn-primary">Log In</button>
				</form>
			</script>

			<!--Dashboard stuff -->
			<script type="text/ng-template" id="/dashboard.html">
				<section class="row">	
					<section class="dashboard_nav">
						<ul ng-show='{{ isLoggedIn() }}'>
							<li role="presentation" class="dashboard_nav_first"><a href="/#/dashboard">Dashboard</a></li>
							<li role="presentation" class="dashboard_nav_second"><a href="/#/income">Income</a></li>
							<li role="presentation" class="dashboard_nav_third"><a href="/#/bills">Bills</a></li>
							<li role="presentation" class="dashboard_nav_fourth"><a href="/#/expenses">Expenses</a></li>
						</ul>	
					</section>
				</section>
				<section class="row">
					<section class="table-responsive">
						<section class="dashboard_overview">
							<table class="table">		
								<tbody>
									<tr>
										<td class="dashboard_overview_1">Total income</td>
										<td class="dashboard_overview_2">{{totalIncome | number:0}}</td>		
									</tr>
									<tr>
										<td class="dashboard_overview_1">Total bills</td>
										<td class="dashboard_overview_2">{{totalBills | number:0}}</td>
									</tr>
									<tr>
										<td class="dashboard_overview_1">Total expenses</td>
										<td class="dashboard_overview_2">{{totalSpent | number:0}}</td>
									</tr>	
									<tr>
										<td class="dashboard_overview_1">Savings</td>
										<td class="dashboard_overview_2">{{totalIncome - totalBills - totalSpent|number:0}}</td>
									</tr>	
								</tbody>
							</table>
						</section>
					</section>
				</section>					
				<section class="row">
					<section class="table-responsive">
						<section class="dashboard_analysis">
							<table class="table">	
								<tbody>
									<tr>
										<td class="dashboard_analysis_1">Spending limit</td>
										<td class="dashboard_analysis_2">{{spendingLimit|number:0}}</td>
									</tr>
									<tr>
										<td class="dashboard_analysis_1">Total spent</td>
										<td class="dashboard_analysis_2">{{totalSpent|number:0}}</td>
									</tr>
									<tr>
										<td class="dashboard_analysis_1">Leftover</td>
										<td class="dashboard_analysis_2">{{leftOver|number:0}}</td>
									</tr>
									<tr>
										<td class="dashboard_analysis_1">Up by</td>
										<td class="dashboard_analysis_2">{{upBy|number:0}}</td>
									</tr>
									<tr>
										<td class="dashboard_analysis_1">Daily budget</td>
										<td class="dashboard_analysis_2">{{dailyBudget|number:0}}</td>
									</tr>
									<tr>
										<td class="dashboard_analysis_1">Days left</td>
										<td class="dashboard_analysis_2">{{daysLeft|number:0}}</td>
									</tr>
									<tr>
										<td class="dashboard_analysis_1">Today</td>
										<td class="dashboard_analysis_2">{{today|date:'MM/dd/yyyy'}}</td>
									</tr>
									<tr>
										<td class="dashboard_analysis_1">Period</td>
										<td class="dashboard_analysis_2">{{periodStart| date:'MM/dd/yyyy'}} - {{periodEnd|date:'MM/dd/yyyy'}}</td>
									</tr>									
								</tbody>
							</table>
						</section>
					</section>								
				</section>

				<!--Spending limit form -->
				<div ng-hide='true'>{{amount1}}</div>				
				<div class="form-group">
					<form name='form' ng-submit='spendingLimitForm()'>
						<span>Set spending limit</span>
						<input class="form-control" type='number' placeholder='1350' step="any" ng-model='amount1'required>
						<button type="submit" class="btn btn-default">Submit</button>
					</form>
				</div>
			</script>

			<!--Income stuff -->
			<script type="text/ng-template" id="/income.html">
				<section class="row">	
					<section class="dashboard_nav">
						<ul ng-show='{{ isLoggedIn() }}'>
							<li role="presentation" class="dashboard_nav_first"><a href="/#/dashboard">Dashboard</a></li>
							<li role="presentation" class="dashboard_nav_second"><a href="/#/income">Income</a></li>
							<li role="presentation" class="dashboard_nav_third"><a href="/#/bills">Bills</a></li>
							<li role="presentation" class="dashboard_nav_fourth"><a href="/#/expenses">Expenses</a></li>
						</ul>	
					</section>
				</section>
				<section class="row">
					<section class="table-responsive">
						<section class="income">
							<table class="table">	
								<thead ng-repeat='item in allIncome'>
									<tr>
										<td class="income_1">{{item.description}}</td>
										<td class="income_2">{{item.amount | number:0}}</td>
									</tr>
								</thead>	
								<tbody>
									<tr>
										<td class="income_1">Total income</td>
										<td class="income_2">{{totalIncome | number:0}}</td>
									</tr>							
								</tbody>
							</table>
						</section>
					</section>
				</section>	
				<form name='form' ng-submit="incomeForm()">
					<span>Description</span>
					<input class='form-control' type="text" placeholder="Job" ng-model="description" list="income_list" required>
					<datalist id="income_list">
						<option value="Paycheck">
						<option value="Rental income">
						<option value="Expense reimbursements">
						<option value="Interest earned">
						<option value="Job bonus">
						<option value="Dividends">
						<option value="Capital gains">
						<option value="Lottery">
						<option value="Gambling winnings">
						<option value="Tax refund">
						<option value="Purchase refund">
					</datalist>
					<span>Amount</span>
					<input class='form-control' type="number" step="any" placeholder="Amount" ng-model="income" required>
					<button type="submit" class="btn btn-default">Submit</button>
				</form>
			</script>	

			<!--Bills stuff -->
			<script type="text/ng-template" id="/bills.html">
				<section class="row">	
					<section class="dashboard_nav">
						<ul ng-show='{{ isLoggedIn() }}'>
							<li role="presentation" class="dashboard_nav_first"><a href="/#/dashboard">Dashboard</a></li>
							<li role="presentation" class="dashboard_nav_second"><a href="/#/income">Income</a></li>
							<li role="presentation" class="dashboard_nav_third"><a href="/#/bills">Bills</a></li>
							<li role="presentation" class="dashboard_nav_fourth"><a href="/#/expenses">Expenses</a></li>
						</ul>	
					</section>
				</section>
				<section class="row">
					<section class="table-responsive">
						<section class="bills">
							<table class="table">						
								<thead ng-repeat='bill in bills'>
									<tr>
										<td class="bills_1">{{bill.description}}</td>
										<td class="bills_2">{{bill.amount | number:0}}</td>
									</tr>
								</thead>
								<tbody>
									<tr>
										<td class="bills_1">Total bills</td>
										<td class="bills_2">{{totalBills | number:0}}</td>
									</tr>							
								</tbody>
							</table>
						</section>
					</section>
				</section>
				<form name='form' ng-submit="billForm()">
					<span>Description</span>
					<input class='form-control' type="text" placeholder="Rent" ng-model="description" list="bills_list" required>
					<datalist id="bills_list">
						<option value="Housing - rent">
						<option value="Housing - mortgage">				
						<option value="Debt - student loans">
						<option value="Debt - credit cards">
						<option value="Debt - personal loans">
						<option value="Debt - business loans">
						<option value="Fitness - gym">
						<option value="Fitness - yoga">
						<option value="Fitness - cycling">
						<option value="Fitness - other">
						<option value="Insurance - disability">
						<option value="Insurance - medical">
						<option value="Insurance - dental">
						<option value="Insurance - vision">
						<option value="Insurance - home">
						<option value="Insurance - car">
						<option value="Utilities - water">
						<option value="Utilities - sewer">
						<option value="Utilities - electricity">
						<option value="Utilities - television">
						<option value="Utilities - internet services">
						<option value="Utilities - garbage/recycling">
					</datalist>
					<span>Amount</span>
					<input class='form-control' type="number" step="any" placeholder="Amount" ng-model="amount" required>
					<button type="submit" class="btn btn-default">Submit</button>
				</form>
			</script>	

			<!--Monthly expenses --> 
			<script type="text/ng-template" id="/expenses.html">
				<section class="row">	
					<section class="dashboard_nav">
						<ul ng-show='{{ isLoggedIn() }}'>
							<li role="presentation" class="dashboard_nav_first"><a href="/#/dashboard">Dashboard</a></li>
							<li role="presentation" class="dashboard_nav_second"><a href="/#/income">Income</a></li>
							<li role="presentation" class="dashboard_nav_third"><a href="/#/bills">Bills</a></li>
							<li role="presentation" class="dashboard_nav_fourth"><a href="/#/expenses">Expenses</a></li>
						</ul>	
					</section>
				</section>
				<section class="row">
					<section class="table-responsive">
						<section class="expenses">
							<table class="table">
								<thead ng-repeat='expense in monthlyExpenses'>
									<tr>
										<td class="expenses_1">{{expense.description}}</td>
										<td class="expenses_2">{{expense.amount | number:0}}</td>
									</tr>
								</thead>
								<tbody>
									<tr>
										<td class="expenses_1">Total expenses</td>
										<td class="expenses_2">{{totalSpent | number:0}}</td>
									</tr>
								</tbody>
							</table>
						</section>
					</section>
				</section>
					<form name='form' ng-submit='monthlyExpenseForm()'>
						<span>Description</span>
						<input class='form-control' type='text' placeholder='Starbucks' ng-model='description' list="expenses_list" required>
						<datalist id="expenses_list">
							<option value="Gas">
							<option value="Car maintenance">
							<option value="Car registration">
							<option value="Bank fee">
							<option value="Charity">
							<option value="Babysitting">
							<option value="Child support">
							<option value="Credit card fees">
							<option value="School tuition">
							<option value="Education">
							<option value="Field trips">
							<option value="Miscellaneous">
							<option value="Wedding">
							<option value="Moving">
							<option value="Groceries">
							<option value="Coffee">
							<option value="Vending machines">
							<option value="Dunkin Donuts">
							<option value="Starbucks">
							<option value="Present - birthday">
							<option value="Present - wedding">
							<option value="Present - baby shower">
							<option value="Present - christmas">
							<option value="Present - just because">
							<option value="Healthcare - dental">
							<option value="Healthcare - vision">
							<option value="Healthcare - general">
							<option value="Healthcare - hospital">
							<option value="Healthcare - medication">
							<option value="Healthcare - vitamin">
							<option value="Household - furniture">
							<option value="Household - cleaning supplies">
							<option value="Household - decorations">
							<option value="Household - tools">
							<option value="Household - maintenance/repair">
							<option value="Household - home improvement">
							<option value="Insurance - automobile">
							<option value="Insurance - health">
							<option value="Insurance - life">
							<option value="Insurance - disability">
							<option value="Insurance - long-term care">
							<option value="Insurance - roadside assistance">
							<option value="Clothing">
							<option value="Magazines">
							<option value="Movie theater">
							<option value="Video rentals">
							<option value="Pay per view">
							<option value="Sporting events - baseball game">
							<option value="Sporting events - basketball game">
							<option value="Sporting events - football game">
							<option value="Sporting events - soccer game">
							<option value="Sporting goods">
							<option value="Video games">
							<option value="Toys">
							<option value="Attractions - amusement parks">
							<option value="Attractions - museums">
							<option value="Attractions - zoos">
							<option value="Vacation - air travel">
							<option value="Vacation - ground transportation">
							<option value="Vacation - lodging">
							<option value="Vacation - entertainment">
							<option value="Food">
						</datalist>
						<span>Amount</span>
						<input class='form-control' type='number' placeholder='5.49' ng-model='amount' step="any" required>
						<button type="submit" class="btn btn-default">Submit</button>
					</form>
				</div>
			</script>		
		</body>
	</html>